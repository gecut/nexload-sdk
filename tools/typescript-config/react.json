{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./base.json",
    "compilerOptions": {
      "declaration": true,
      "declarationMap": true,
      "emitDeclarationOnly": true, 
      "noEmit": false,
  
      "jsx": "react-jsx",
      "jsxImportSource": "react",
  
      "isolatedModules": true
    },
    "include": ["src"],
    "exclude": ["dist", "node_modules"]
  }
  