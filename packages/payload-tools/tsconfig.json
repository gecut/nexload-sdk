{
  "extends": "@nexload-sdk/typescript-config/base.json",
  "include": ["."],
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
  },
  "exclude": ["node_modules", "dist"]
}
